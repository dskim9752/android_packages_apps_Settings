<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/themes_settings_title" >

    <PreferenceCategory
        android:title="@string/title_general"
        android:key="lockscreen_general_category" >

    <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
        android:key="status_bar_wifi_color"
        android:title="@string/status_bar_wifi_color"
        android:defaultValue="#ffffff" />

    <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
        android:key="status_bar_data_color"
        android:title="@string/status_bar_data_color"
        android:defaultValue="#ffffff" />

    <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
        android:key="status_bar_airplain_color"
        android:title="@string/status_bar_airplain_color"
        android:defaultValue="#ffffff" />

    <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
        android:key="status_bar_clock_color"
        android:title="@string/status_bar_clock_color"
        android:defaultValue="#ffffff" />

    <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
        android:key="status_bar_volume_color"
        android:title="@string/status_bar_volume_color"
        android:defaultValue="#ffffff" />

      <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
            android:key="status_bar_show_network_stats_color"
            android:title="@string/status_bar_show_network_stats_color_title"
            android:defaultValue="#ffffff" />

      <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
            android:key="status_bar_batterymeter_frame_color"
	    android:summary="Default:#66FFFFFF"
            android:title="@string/batterymeter_frame_color" />

      <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
	    android:key="status_bar_batterymeter_circle_bolt_color"
            android:summary="Default:#FFFFFFFF"
            android:title="@string/batterymeter_circle_bolt_color" />

      <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
            android:key="status_bar_batterymeter_normal_frame_color"
            android:summary="Default:#66FFFFFF"
            android:title="@string/batterymeter_normal_frame_color" />

      <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
            android:key="status_bar_batterymeter_charge_color"
            android:summary="Default:#FFFFFFFF"
            android:title="@string/batterymeter_charge_color" />

      <com.android.settings.cyanogenmod.colorpicker.ColorPickerPreference
            android:key="status_bar_batterymeter_bolt_color"
            android:summary="Default:#B2000000"
            android:title="@string/batterymeter_bolt_color" />

    </PreferenceCategory>
</PreferenceScreen>
